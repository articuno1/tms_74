<header class="main-header">
  <a class="logo">
    <span class="logo-lg">
      <b><%= t "layouts.header.logo" %></b>
    </span>
  </a>
  <nav class="navbar navbar-static-top">
    <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
      <span class="sr-only"></span>
    </a>

    <div class="navbar-custom-menu">
      <ul class="nav navbar-nav">
        <li class="dropdown user user-menu">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <img src="dist/img/user2-160x160.jpg" class="user-image" alt="User Image">
            <span class="hidden-xs"><%= t "layouts.header.username" %></span>
          </a>
          <ul class="dropdown-menu">
            <!-- User image -->
            <li class="user-header">
              <img src="dist/img/user2-160x160.jpg" class="img-circle" alt="User Image">

              <p>
                <%= t "layouts.header.username" %>
                <small><%= t "layouts.header.calender" %></small>
              </p>
            </li>
            <!-- Menu Body -->
            <li class="user-body">
              <div class="row">
                <div class="col-xs-4 text-center">
                  <a href="#"><%= t "layouts.header.followers" %></a>
                </div>
                <div class="col-xs-4 text-center">
                  <a href="#"><%= t "layouts.header.friends" %></a>
                </div>
              </div>
              <!-- /.row -->
            </li>
            <!-- Menu Footer-->
            <li class="user-footer">
              <div class="pull-left">
                <a href="#" class="btn btn-default btn-flat">
                  <%= t "layouts.header.profile" %>
                </a>
              </div>
              <div class="pull-right">
                <a href="#" class="btn btn-default btn-flat">
                  <%= t "layouts.header.sign" %>
                </a>
              </div>
            </li>
          </ul>
        </li>
        <li>
          <a href="#" data-toggle="control-sidebar"><i class="fa fa-gears"></i></a>
        </li>
      </ul>
    </div>
  </nav>
</header>
